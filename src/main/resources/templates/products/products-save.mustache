{{>layout/header}}
<!-- ***** Reservation Us Area Starts ***** -->
<section class="section" id="reservation">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 align-self-center">
                <div class="left-text-content">
                    <div class="section-heading">
                        <h6>상품 등록</h6>
                        <h2>상품 등록 주의 사항</h2>
                    </div>
                    <p>상품 등록시 주의사항 1</p>
                    <div class="row">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-form">
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <h4>등록 상품 정보</h4>
                            </div>
                            <div class="form-inline col-lg-12">
                                <label for="name" class="col-sm-4"> 상 품 명 : </label>
                                <input class="col-sm-8" type="text" name="name" id="name" required="true">
                            </div>
                            <div class="form-inline col-lg-12">
                                <label for="seller" class="col-sm-4"> 등 록 자 : </label>
                                <input class="col-sm-8" type="text" name="seller" id="seller" required="true" value="{{user.name}}" disabled>
                            </div>
                            <div class="form-inline col-lg-12">
                                <label for="picture" class="col-sm-4"> 상품 사진 : </label>
                                <input class="col-sm-8" type="text" name="picture" id="picture" required="">
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <textarea name="desc" rows="6" id="desc" placeholder="상품에 대한 설명을 작성해 주세요." required=""></textarea>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="button" id="btn-save" class="main-button-icon">상품 등록</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Reservation Area Ends ***** -->
{{>layout/footer}}