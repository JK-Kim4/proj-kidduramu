{{>layout/header}}
<section class="section" id="offers">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 offset-lg-4 text-center">
                <div class="section-heading">
                    <h6>판매 상품</h6>
                    <h2>판매 상품 리스트</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row" id="tabs">
                    <div class="col-lg-12">
                        <section class='tabs-content'>
                            <article id='tabs-1'>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="row">
                                            <div class="left-list">
                                                {{#products}}
                                                <div class="col-lg-12">
                                                    <div class="tab-item">
                                                        {{#filePath}}
                                                            <img src="{{filePath}}" alt="">
                                                        {{/filePath}}
                                                        <h4>{{name}}</h4>
                                                        <div class="price">
                                                            <h6>{{price}}</h6>
                                                        </div>
                                                        <button type="button" onclick="window.location.href='/products/detail/{{id}}'">구매 하기</button>
                                                    </div>
                                                </div>
                                                {{/products}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{{>layout/footer}}