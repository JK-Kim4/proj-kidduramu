{{>layout/header}}
<section class="section" id="reservation">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact-form">
                    <form id="detail-form">
                        <div class="row">
                            <div class="col-lg-12">
                                <h4>회원 정보 관리</h4>
                            </div>
                            <div class="form-inline col-lg-8">
                                <label for="name" class="col-sm-2"> 이 름 : </label>
                                <input class="col-sm-6" type="text" id="name" value="{{user.name}}" disabled>
                            </div>
                            <div class="form-inline col-lg-8">
                                <label for="name" class="col-sm-2"> 이 메 일 : </label>
                                <input class="col-sm-6" type="text" id="price" value="{{user.email}}" disabled>
                            </div>
                            <input type="hidden" name="userId" id="userId" value="{{user.userId}}">
                            <div class="col-lg-8">
                                <fieldset>
                                    <button type="button" id="btn-resign" class="main-button-icon">회원 탈퇴</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{{>layout/footer}}