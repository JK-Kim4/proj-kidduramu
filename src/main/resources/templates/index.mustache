{{>layout/header}}

    <!-- ***** Main Banner Area Start ***** -->
    <div id="top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4">
                    <div class="left-content">
                        <div class="inner-content">
                            <h4>Boot Shopping mall</h4>
                            <h6>BEST TUTORIAL ITEMS</h6>
                            <div class="main-white-button scroll-to-section">
                                <a href="/product/list">Show items</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="main-banner header-text">
                        <div class="Modern-Slider">
                          <!-- Item -->
                          <div class="item">
                            <div class="img-fill">
                                <img src="assets/images/slide-01.jpg" alt="">
                            </div>
                          </div>
                          <!-- // Item -->
                          <!-- Item -->
                          <div class="item">
                            <div class="img-fill">
                                <img src="assets/images/slide-02.jpg" alt="">
                            </div>
                          </div>
                          <!-- // Item -->
                          <!-- Item -->
                          <div class="item">
                            <div class="img-fill">
                                <img src="assets/images/slide-03.jpg" alt="">
                            </div>
                          </div>
                          <!-- // Item -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->

    <!-- ***** Menu Area Starts ***** -->
    <section class="section" id="menu">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="section-heading">
                        <h6>Hot Stuff</h6>
                        <h2>고객 주문량이 많은 인기 상품 TOP 10</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="menu-item-carousel">
            <div class="col-lg-12">
                <div class="owl-menu-item owl-carousel">
                    {{#products}}
                        <div class="item">
                            {{#filePath}}
                            <div class='card card{{productId}}' style="background-image: {{filePath}}">
                            {{/filePath}}
                            {{^filePath}}
                            <div class='card card{{productId}}'>
                            {{/filePath}}
                                <div class="price"><h6>TOP 3</h6></div>
                                <div class='info'>
                                    <h1 class='title'>{{name}}</h1>
                                    <p class='price'>{{price}}원</p>
                                    <div class="main-text-button">
                                        <div class="scroll-to-section"><a href="/product/detail/{{productId}}">Go to item <i class="fa fa-angle-down"></i></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/products}}
                    {{^products}}
                        <div class="item">
                            <div class='card card1'>
                                <div class="price"><h6>TOP 1</h6></div>
                                <div class='info'>
                                  <h1 class='title'>기뚜라무 01</h1>
                                  <p class='description'>DB 조회 후 고객 주문량 많은 순 정렬 -> TOP 01</p>
                                  <div class="main-text-button">
                                      <div class="scroll-to-section"><a href="#">No items in there <i class="fa fa-angle-down"></i></a></div>
                                  </div>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class='card card2'>
                                <div class="price"><h6>TOP 2</h6></div>
                                <div class='info'>
                                  <h1 class='title'>기뚜라무 02</h1>
                                  <p class='description'>DB 조회 후 고객 주문량 많은 순 정렬 -> TOP 02</p>
                                  <div class="main-text-button">
                                      <div class="scroll-to-section"><a href="#">No items in there <i class="fa fa-angle-down"></i></a></div>
                                  </div>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class='card card2'>
                                <div class="price"><h6>TOP 3</h6></div>
                                <div class='info'>
                                    <h1 class='title'>기뚜라무 03</h1>
                                    <p class='description'>DB 조회 후 고객 주문량 많은 순 정렬 -> TOP 03</p>
                                    <div class="main-text-button">
                                        <div class="scroll-to-section"><a href="#">No items in there <i class="fa fa-angle-down"></i></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/products}}
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Menu Area Ends ***** -->

{{>layout/footer}}