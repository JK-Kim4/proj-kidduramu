{{>layout/header}}
<section class="section" id="reservation">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="contact-form">
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <h4>주문 상품 정보</h4>
                            </div>
                            <div class="form-inline col-lg-12">
                                <label for="name" class="col-sm-4"> 상 품 명 : </label>
                                <input class="col-sm-6" type="text" id="name" value="{{product.name}}" disabled>
                            </div>
                            <br>
                            <div class="form-inline col-lg-12">
                                <label for="seller" class="col-sm-4"> 가 격 : </label>
                                <input class="col-sm-6" type="text" id="name" value="{{product.price}}" disabled>
                            </div>
                            <br>
                            <div class="form-inline col-lg-12">
                                <label for="picture" class="col-sm-4"> 상품 사진 : </label>
                                {{#product.filePath}}
                                    <img src="{{product.filePath}}" alt="">
                                {{/product.filePath}}
                                {{^product.filePath}}
                                    <img src="/asserts/images/default.png" alt="기본이미지">
                                {{/product.filePath}}
                            </div>
                            <br>
                            <div class="form-inline col-lg-12">
                                <label class="col-sm-4" for="orderAmt"> 수 량 : </label>
                                <input class="col-sm-8" type="number" id="selectedAmount">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-form">
                    <form id="orderForm" action="/order/direct" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <h4>주문자 정보 작성</h4>
                            </div>
                            <div class="form-inline col-lg-12">
                                <label for="name" class="col-sm-4"> 주 문 자 : </label>
                                <input class="col-sm-8" type="text" name="name" id="name" value="{{user.name}}" disabled>

                            </div>
                            <div class="form-inline col-lg-12">
                                <label for="picture" class="col-sm-4"> 주 소 :  </label>
                                <input class="col-sm-8" type="text" name="address" id="address" required="true">
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="button" id="btn-order" class="main-button-icon">주문 하기</button>
                                </fieldset>
                            </div>
                        </div>
                        <input type="hidden" name="userId" id="userId" value="{{user.userId}}">
                        <input type="hidden" name="productId" id="productId" value="{{product.productId}}">
                        <input type="hidden" name="orderCount" id="orderCount">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{{>layout/footer}}